<Window x:Class="HR.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        FontFamily="Segoe UI" Background="#f0f0f0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side with large image -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="0" Width="0"/>
        <Image Source="/images/large_image.png" Stretch="Uniform" />

        <!-- Right side with login form -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,0">
                <Image Source="/images/logo.png" Height="100" Margin="0,0,0,10"/>
                <TextBlock Text="Welcome to HR App" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <Label Content="Username" Margin="0,0,0,5"/>
                <ComboBox x:Name="UsernameComboBox" Margin="0,0,0,10" Height="30"/>
                <Label Content="Password" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>
                <Button Content="Login" Width="300" HorizontalAlignment="Center" Click="LoginButton_Click" Background="#007ACC" Foreground="White" Padding="10,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
